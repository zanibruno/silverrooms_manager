<h1>Create New Property</h1>
<% if @property.errors.any? %>
<div id="error_explanation">
    <ul>
        <% @property.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
        <% end %>
    </ul>
</div>
<% end %>
<%=form_for @property do |f|%>
    <%=f.label "Property Address" %>
    <%=f.text_field :address  %></br>
    <%=f.label "Single Rooms" %>
    <%=f.number_field :single_rooms %></br>
    <%=f.label "Double Rooms" %>
    <%=f.number_field :double_rooms %></br>
    <%=f.label "Bathrooms" %>
    <%=f.number_field :bathrooms%></br>
    <%=f.collection_select(:landlord_id, Landlord.all, :id, :name)  %>
    <%=f.submit "Create Property" %></br>


<% end %>
